int main() {
    std::vector<int> vertexData = { /* данные вершин модели */ };
    std::vector<int> textureData = { /* данные текстур */ };

    // Вызываем компилятор PiroScript
    compilePiroScript("shader.pis");

    // Оптимизируем GPU для Nvidia
    optimizeGPU(vertexData, textureData, true);

    // Оптимизируем GPU для AMD
    optimizeGPU(vertexData, textureData, false);

    return 0;
}
