# Добавим функцию, которая выбирает автоматически подходящую оптимизацию
function autoSelectOptimization() {
    # Определение видеокарты пользователя
    var userGPU = getUserGPU(); # Ваш код для определения видеокарты пользователя
    
    if (userGPU == "Nvidia") {
        optimizeForNvidia();
    } else if (userGPU == "AMD") {
        optimizeForAMD();
    } else {
        # Если видеокарта не определена, выполняем общую оптимизацию
        generalOptimization();
    }
}

