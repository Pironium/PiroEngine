    void loadModel(const std::string& modelName) {
        std::cout << "Loading 3D model: " << modelName << std::endl;
        // Дополнительный код для загрузки модели.
    }

    // Добавляем новую функцию "renderScene" для отрисовки сцены.
    void renderScene() {
        std::cout << "Rendering 3D scene" << std::endl;
        // Дополнительный код для отрисовки сцены.
    }
};

int main() {
    PiroEngine engine;

    // Используем новые функции движка.
    engine.createScene("MyGameScene");
    engine.loadModel("PlayerModel");
    engine.renderScene();

    return 0;
}
